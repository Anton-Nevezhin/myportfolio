mixin menu(title)
    .text.link__header-1
        a.link.link_header(href= '#')=title

- const points = ['О нас', 'Платформа', 'Курсы', 'Лекции', 'Тарифы', 'Блог', 'Контакты']

.header-1
    .header-1__content
        .logo 
            img.logo__image(src='../assets/images/logo-image-big.png')
            img.logo__text(src='../assets/images/logo-text-big.png')
        .menu 

            each item in points
                +menu(item) 
    .text.title Практический курс по анимации для начинающих motion-дизайнеров